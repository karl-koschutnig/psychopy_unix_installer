// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu
{
    "name": "Ubuntu 24 with PsychoPy",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "features": {
        "ghcr.io/lukewiwa/features/shellcheck:0": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "mads-hartmann.bash-ide-vscode",
                "timonwong.shellcheck",
                "foxundermoon.shell-format",
                "leosj29.bash-sh-runner",
                "davidanson.vscode-markdownlint",
                "vscode-icons-team.vscode-icons",
                "redhat.vscode-yaml",
                "zainchen.json",
                "donjayamanne.githistory",
                "github.vscode-pull-request-github"
            ]
        }
    },
    "postCreateCommand": "ln -sf /psychopy/psychopy-test-installation /workspaces/psychopy_linux_installer/",
    "postStartCommand": "sudo chmod +x .devcontainer/.run_checks.sh && ./.devcontainer/.run_checks.sh"
}